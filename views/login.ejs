<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-language" content="es">
    <title>
        <%= title %>
    </title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <% include ./Shared/Heads %>

        <script>
            function validateForm() {

                var a = document.forms["formulario"]["username"].value;
                if (a == "") {

                    alert("Ingresa un Usuario valido");
                    return false;
                }

                var b = document.forms["formulario"]["password"].value;
                if (b == "") {
                    alert("Ingresa una Contraseña válida");
                    return false;
                }

            }
        </script>
</head>

<body>

    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="modal-dialog" style="margin-bottom:0">
                            <div class="modal-content">
                                <div class="panel-heading text-center" style="padding-top: 5%; padding-bottom: 5%">
                                    <h5 class="panel-title" style="font-size: 30px;color: darkgrey">Login</h5>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group text-center" style="padding-top: 5%; padding-bottom: 10%">
                                        <img src="http://drive.google.com/uc?export=view&id=1QLy3J7_wBWth0Qa5UJWsUvwrcly2CQ1y" width="150" alt="" class="response-image">
                                    </div>
                                    <form action="/login" method="POST" onsubmit="return validateForm()" name="formulario" style="margin-left: 25%; margin-right: 25%">
                                        <div class="form-group">
                                            <input id="username" name="username" class="form-control" placeholder="Usuario" type="text" autofocus="" autocomplete="off">
                                        </div>
                                        <div class="form-group">
                                            <input id="password" name="password" class="form-control" placeholder="Contraseña" type="password">
                                        </div>
                                        <div class="form-group text-center" style="padding-top: 5%; padding-bottom: 5%">
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fa fa-sign-in"></i> Login</button>
                                            <a href="/">
                                                <button type="button" class="btn btn-sm btn-danger">
                                                    <i class="fa fa-sign-in"></i> Cancelar</button>
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>